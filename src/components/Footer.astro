<style>
.website{
    display: none;
}

.mobile{
    background-color: var(--bg-color-black-100);
    background-size: contain;
    background-repeat: no-repeat;
}

.some{
    display: flex;
    flex-flow: row wrap;
    padding-block: var(--padding-size-medium);
    align-items: end;
}

.some a{
    padding-inline: var(--padding-size-small);
}

.some img{
    width: 100%;
    height: auto;
}
.praktisk div{
    padding-block: var(--padding-size-xsmall);
}

p, a{
    color: var(--text-color-white-100);
    text-decoration:none;
}

.padding{
    padding: var(--padding-size-large);
}

.bottles img{
    width: 100%;
    height: auto;
}

@media screen and (min-width: 640px){
    .website{
    background-color: var(--bg-color-black-100);
    display: block;
}

.grid{
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: 1fr;
    padding: var(--padding-size-xlarge);
    padding-inline: var(--padding-size-xxlarge);
}
.mobile{
    display: none;
}
}

</style>