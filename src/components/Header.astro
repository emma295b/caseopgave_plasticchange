---
import "../styles/globalstyle.css";
import Button from "../components/Button.astro";
---

<section class="mobile">
    <div></div>
    <div class="content">
        <h1>
            SKRIV UNDER NU
        </h1>
        <h2>
            Kræv en ambitiøs global plastiktraktat.
        </h2>
        <Button variant="scale-up-center primary">Skriv under her </Button>
    </div>
</section>

<section class="website">
    <div></div>
    <div></div>
    <div></div>
    <div class="content">
        <div>
            <h1>
                SKRIV UNDER NU
            </h1>
            <h2>
                Kræv en ambitiøs global plastiktraktat.
            </h2>
        </div>
        <div class="button">
            <Button variant="primary scale-up-center">Skriv under her
            </Button>
        </div>
    </div>
</section>

<style>
.website{
    display: none;
}

.mobile{
    display: grid;
    grid-template-rows: 1fr 1fr;
    background-image: url("/pictures/skilpadde1.webp");
    background-size: cover;
    background-position: center;
    color: var(--text-color-white-100);
    padding: var(--padding-size-medium);
}

.content{
    background-color: var(--bg-color-black-80);
    padding-block: var(--padding-size-medium);
    padding-inline: var(--padding-size-medium);
}

/*FONT*/
h1{
    font-family: "Header";
    font-size: var(--header-size-small);
}

h2{
    font-family: "Subheader";
    font-size: var(--subheader-size-small);
}

p, a{
    font-family: "Paragraph";
    font-size: var(--paragraph-size-small);
}

@media screen and (min-width: 640px){

    .website{
    display: grid;
    background-image: url("/pictures/skilpadde1.webp");
    background-size: cover;
    background-position: center;
    color: var(--text-color-white-100);
    padding-block: var(--padding-size-xxlarge);
    padding-inline: var(--padding-size-large);
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: 1fr;
    grid-column-gap: var(--padding-size-medium);
}

.content{
    background-color: var(--bg-color-black-80);
    grid-area: 2 / 1 / 3 / 2;
}

.mobile{
    display: none;
}

.button{
    text-align: right;
}

/*FONT*/
h1{
    font-family: "Header";
    font-size: var(--header-size-large);
}

h2{
    font-family: "Subheader";
    font-size: var(--subheader-size-large);
}

p, a{
    font-family: "Paragraph";
    font-size: var(--paragraph-size-large);
}
}

</style>