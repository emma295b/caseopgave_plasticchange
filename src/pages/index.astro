---
import Mainlayout from "../layout/Mainlayout.astro";
import "../styles/globalstyle.css";
---

<Mainlayout>
</Mainlayout>

<style>
h1{
    font-family: "Header";
    font-size: var(--header-size-large);
}

h2{
    font-family: "Subheader";
    font-size: var(--subheader-size-large);
}

p, a{
    font-family: "Paragraph";
    font-size: var(--paragraph-size-large);
}

@media screen (max-width: 430;) {
h1{
    font-family: "Header";
    font-size: var(--header-size-small);
}

h2{
    font-family: "Subheader";
    font-size: var(--subheader-size-small);
}

p{
    font-family: "Paragraph";
    font-size: var(--paragraph-size-small);
}
}
</style>
